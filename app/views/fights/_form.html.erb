<%= simple_form_for(@fight) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :tournament %>

    <% @fighters = Fighter.find(:all, :order => 'name') %>
    <%= f.association :winner, collection: @fighters %>
    <%= f.association :loser, collection: @fighters %>

    <%= f.input :winner_before_points %>
    <%= f.input :winner_after_points %>
    <%= f.input :loser_before_points %>
    <%= f.input :loser_after_points %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
